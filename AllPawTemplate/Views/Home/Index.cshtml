@using AllPawTemplate.Dtos
@model List<Advert>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout/HomeLayout/HomeLayout.cshtml";
}

<div class="shop-page pt-120 mb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="shop-sidebar">
                    <div class="shop-widget">
                        <div class="check-box-item">
                            <h5 class="shop-widget-title">Tür</h5>
                            <div class="checkbox-container">
                                <label class="containerss">
                                    Golden Retriever
                                    <input type="checkbox" checked="checked">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    Labrador Retriever
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    German Shepherd
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    Bulldog
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    Maltipoo
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    Poodle
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    Morkie
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    Chow Chow
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    Pomeranian
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="shop-widget">
                        <h5 class="shop-widget-title">Fiyat Aralığı</h5>
                        <div class="range-widget">
                            <div id="slider-range" class="price-filter-range"></div>
                            <div class="mt-25 d-flex justify-content-between gap-4">
                                <input type="number" min="500" max="20000" oninput="validity.valid||(value='500');" id="min_price" class="price-range-field" />
                                <input type="number" min="500" max="20000" oninput="validity.valid||(value='20000');" id="max_price" class="price-range-field" />
                            </div>
                        </div>
                    </div>

                    <div class="shop-widget">
                        <div class="check-box-item">
                            <h5 class="shop-widget-title">Yaşı</h5>
                            <div class="checkbox-container">
                                <label class="containerss">
                                    1 Yaşdan Küçük
                                    <input type="checkbox" checked="checked">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    1 - 2 Yaş
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    2 - 3 Yaş
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    3 - 5 Yaş
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    5 Yaşdan Büyük
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="shop-widget">
                        <div class="check-box-item">
                            <h5 class="shop-widget-title">Kimden</h5>
                            <div class="checkbox-container">
                                <label class="containerss">
                                    Sahibinden
                                    <input type="checkbox" id="sahibindenCheckbox" checked="checked">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    Petshop'dan
                                    <input type="checkbox" id="petshopCheckbox">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <script>
                        const sahibindenCheckbox = document.getElementById('sahibindenCheckbox');
                        const petshopCheckbox = document.getElementById('petshopCheckbox');

                        sahibindenCheckbox.addEventListener('change', function () {
                            if (sahibindenCheckbox.checked) {
                                petshopCheckbox.checked = false;
                            }
                        });

                        petshopCheckbox.addEventListener('change', function () {
                            if (petshopCheckbox.checked) {
                                sahibindenCheckbox.checked = false;
                            }
                        });
                    </script>
                    <div class="shop-widget">
                        <div class="check-box-item">
                            <h5 class="shop-widget-title">Şehir</h5>
                            <div class="checkbox-container">
                                <label class="containerss">
                                    İstanbul Avrupa
                                    <input type="checkbox" checked="checked">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    İstanbul Anadolu
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    İzmir
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    Ankara
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="containerss">
                                    Kastamonu
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                    </div>
