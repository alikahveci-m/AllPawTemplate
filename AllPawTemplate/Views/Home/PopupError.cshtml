@{
    ViewData["Title"] = "PopupError";
    Layout = "~/Views/Shared/Layout/HomeLayout/HomeLayout.cshtml";
}



<!DOCTYPE html>
<html>
<head>
    <style>

        /* Arka planı karartmak için bir overlay kullanacağız */
        .overlayx {
            display: block;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.7); /* Siyah yarı saydamlık arka plan */
            z-index: 1;
        }

        /* Popup penceresini stilize edin */
        .popupx {
            display: block;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.5);
            z-index: 2;
        }

        html {
            display: grid;
            min-height: 100%;
            font-family: sans-serif;
        }

        body {
            display: grid;
            overflow: hidden;
            text-transform: uppercase;
            text-align: center;
        }

        .hp-container {
            position: relative;
            margin: auto;
            overflow: hidden;
            width: 300px;
            height: 300px;
        }

        h1 {
            font-size: 0.9em;
            font-weight: 100;
            letter-spacing: 3px;
            padding: 5px 0;
            color: #fcfcfc;
            text-transform: uppercase;
        }

        .hp-green {
            color: green;
        }

        .hp-red {
            color: red;
        }

        .hp-alert {
            font-weight: 700;
            letter-spacing: 5px;
        }

        p {
            margin-top: -5px;
            font-size: 0.6em;
            color: #777777;
            letter-spacing: 1px;
        }

        button, .hp-dot {
            cursor: pointer;
        }

        .hp-success-box {
            position: relative;
            margin: auto;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom right, #b0db7d 40%, #99dbb4 100%);
            border-radius: 20px;
            box-shadow: 3px 3px 10px #a6a8b1;
        }

        .hp-error-box {
            position: relative;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom right, #ef8d9c 40%, #ffc39c 100%);
            border-radius: 20px;
            box-shadow: 3px 3px 10px #a6a8b1;
        }

        .hp-dot {
            width: 8px;
            height: 8px;
            background-color: #fcfcfc;
            border-radius: 50%;
            position: absolute;
            top: 4%;
            right: 6%;
        }

            .hp-dot:hover {
                background-color: #777777;
            }

        .two {
            right: 12%;
            opacity: 0.5;
        }

        .hp-face {
            position: absolute;
            width: 22%;
            height: 22%;
            background-color: #fcfcfc;
            border-radius: 50%;
            border: 1px solid #777777;
            top: 21%;
            left: 37.5%;
            z-index: 2;
            animation: bounce 1s ease-in infinite;
        }

        .hp-face2 {
            position: absolute;
            width: 22%;
            height: 22%;
            background-color: #fcfcfc;
            border-radius: 50%;
            border: 1px solid #777777;
            top: 21%;
            left: 37.5%;
            z-index: 2;
            animation: roll 3s ease-in infinite;
        }

        .hp-eye {
            position: absolute;
            width: 5px;
            height: 5px;
            background-color: #777777;
            border-radius: 50%;
            top: 40%;
            left: 20%;
        }

        .right {
            left: 68%;
        }

        .hp-mouth {
            position: absolute;
            width: 7px;
            height: 7px;
            border-radius: 50%;
            top: 43%;
            left: 41%;
        }

        .happy {
            border: 2px solid;
            border-color: transparent #777777 #777777 transparent;
            transform: rotate(45deg);
        }

        .sad {
            top: 49%;
            border: 2px solid;
            border-color: transparent #777777 #777777 transparent;
            transform: rotate(225deg);
        }

        .hp-shadow {
            position: absolute;
            width: 21%;
            height: 3%;
            opacity: 0.5;
            background-color: #777;
            left: 40%;
            top: 43%;
            border-radius: 50%;
            z-index: 1;
        }

        .scale {
            animation: scale 1s ease-in infinite;
        }

        .move {
            animation: move 3s ease-in-out infinite;
        }

        .hp-message {
            position: absolute;
            width: 100%;
            text-align: center;
            height: 40%;
            top: 47%;
        }

        .hp-button-box {
            position: absolute;
            background-color: #fcfcfc;
            width: 50%;
            height: 15%;
            border-radius: 20px;
            top: 73%;
            left: 25%;
            outline: 0;
            border: none;
            box-shadow: 2px 2px 10px #777777;
            transition: all 0.5s ease-in-out;
        }

            .hp-button-box:hover {
                background-color: orange;
                transform: scale(1.05);
                transition: all 0.3s ease-in-out;
            }

        @@keyframes bounce {
            50% {
                transform: translateY(-10px);
            }
        }

        @@keyframes scale {
            50% {
                transform: scale(0.9);
            }
        }

        @@keyframes roll {
            0% {
                transform: rotate(0);
                left: 25%;
            }

            50% {
                left: 50%;
                transform: rotate(168deg);
            }

            100% {
                transform: rotate(0deg);
                left: 25%;
            }
        }

        @@keyframes move {
            0% {
                left: 25%;
            }

            50% {
                left: 50%;
            }

            100% {
                left: 25%;
            }
        }

    </style>
</head>
<body>
    <!-- Overlay -->
    <div class="overlayx" id="overlayx"></div>

    <!-- Popup Penceresi -->
    <div class="popupx" id="popupx">
        <div class="hp-container">

            <div class="hp-error-box">
                <div class="hp-dot"></div>
                <div class="hp-dot two"></div>
                <img class="hp-face2" alt="image" src="~/HPimage/close-button-png.png">

                <div class="hp-shadow move"></div>
                <div class="hp-message">
                    <h1 class="hp-alert">Error!</h1>
                    <p>Something went wrong</p>
                </div>

                <button class="hp-button-box">
                    <h1 class="hp-red">Try Again</h1>
                </button>
            </div>
        </div>
    </div>



</body>
</html>



