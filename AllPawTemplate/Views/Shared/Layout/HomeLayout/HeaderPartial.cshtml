<script>
    // Mobil menüye geçiş noktasını belirleyin (örneğin, 768 piksel olarak kabul edelim)
    const mobileMenuBreakpoint = 768;

    // Sayfa yüklendiğinde ve pencere boyutu değiştiğinde bu işlevi çağırın
    function handleMobileMenuBackground() {
        const mainMenu = document.querySelector('.main-menu');
        const windowWidth = window.innerWidth;

        // Eğer pencere boyutu mobil menü geçiş noktasının altındaysa arka planı ekle
        if (windowWidth <= mobileMenuBreakpoint) {
            mainMenu.style.backgroundImage = 'linear-gradient(45deg, black, gray, #f86ca0, black, #fe7e1f, gray, black)';
        } else {
            // Eğer pencere boyutu mobil menü geçiş noktasının üstündeyse arka planı kaldır
            mainMenu.style.backgroundImage = 'none';
        }
    }

    // Sayfa yüklendiğinde ve pencere boyutu değiştiğinde işlevi çağırın
    window.addEventListener('load', handleMobileMenuBackground);
    window.addEventListener('resize', handleMobileMenuBackground);
</script>